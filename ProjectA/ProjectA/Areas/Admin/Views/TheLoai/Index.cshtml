
@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách thể loại</h1>
<br />
<div class="container">
    <form asp-action="Search" method="get">
        <input type="text" name="searchString" placeholder="Nhập thể loại cần tìm..." value="@ViewBag.SearchString"/>
        <input type="submit" name="Tìm kiếm"/>
    </form>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Tên thể loại</th>
                <th>Ngày tạo</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        @foreach (var item in @ViewBag.TheLoai)
        {
            <tbody>
                <tr>
                    <td width="30%">@item.Name</td>
                    <td width="30%">@String.Format("{00:dd/MM/yyyy}", item.DateCreated) </td>
                    <td width="40%"> 
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Add new</a> 
</div>
