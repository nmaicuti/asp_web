@model IEnumerable<BaiKiemTra02.Models.LopHoc>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Danh sách các lớp học</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <a class="btn btn-success mb-3" asp-action="Create">
                <i class="fas fa-plus"></i> Thêm lớp học mới
            </a>
        </div>
    </div>

    <div class="row">   
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên lớp học</th>
                        <th>Năm nhập học</th>
                        <th>Năm ra trường</th>
                        <th>Số lượng sinh viên</th>
                        <th class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenLopHoc</td>
                            <td>@item.NamNhapHoc</td>
                            <td>@item.NamRaTruong</td>
                            <td>@item.SoLuongSinhVien</td>
                            <td class="text-center">
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i> Chỉnh sửa
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <a class="btn btn-secondary" href="/">Quay lại trang chủ</a>
        </div>
    </div>
</div>
